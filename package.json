{
  "name": "ecommerce-supplement-store",
  "version": "1.0.0",
  "description": "ecommerce supplement store",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server",
    "test-backend": "jest --no-cache --watchAll=false",
    "test-frontend": "npm test --prefix frontend -- --watchAll=false",
    "test": "concurrently \"npm run test-backend\" \"npm run test-frontend\"",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server-test": "cross-env NODE_ENV=test nodemon backend/server",
    "client-test": "cross-env BROWSER=none PORT=3006 npm start --prefix frontend",
    "dev-test": "concurrently \"npm run server-test\" \"npm run client-test\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "data-test:import": "cross-env NODE_ENV=test node backend/seeder",
    "data-test:destroy": "cross-env NODE_ENV=test node backend/seeder -d",
    "build": "cross-env INLINE_RUNTIME_CHUNK=false npm run build --prefix frontend && cp -r ./api-docs ./frontend/build/",
    "heroku-postbuild": "bash ./build-tasks.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/memoryInject/ecommerce-supplement-store.git"
  },
  "keywords": [
    "MERN",
    "ecommerce",
    "cart",
    "test"
  ],
  "author": "Mahesh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/memoryInject/ecommerce-supplement-store/issues"
  },
  "homepage": "https://github.com/memoryInject/ecommerce-supplement-store#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jest": "^26.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "multer": "^1.4.2",
    "supertest": "^6.1.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cypress": "^9.1.1",
    "cypress-dark": "^1.8.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15"
  }
}
